# Qrow IQ Environment Variables
# Copy this file to .env and fill in your API keys

# Google Gemini 2.0 Flash API Key
# Get your key from: https://makersuite.google.com/app/apikey
# Or: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Google Cloud Text-to-Speech
# Option 1: Service Account JSON file path (RECOMMENDED)
# Download service account JSON from Google Cloud Console
# Enable Cloud Text-to-Speech API in your GCP project
# Place the JSON file in project root and set path below
GOOGLE_TTS_SERVICE_ACCOUNT_PATH=./service-account.json

# Option 2: API Key (if using API key authentication - less common)
# GOOGLE_TTS_KEY=your_google_tts_key_here

# Server Configuration
FRONTEND_URL=http://localhost:5173
BACKEND_PORT=8000

# Application Settings
DEBUG=false

# Interview Settings (optional, defaults in config.py)
# MAX_QUESTIONS=10
# SILENCE_THRESHOLD_SECONDS=2.0
